# mongod.conf

# for documentation of all options, see:
#   http://docs.mongodb.org/manual/reference/configuration-options/

# Where and how to store data.
storage:
# Omit trailing slash
  dbPath: <%= @dbpath %>

  journal:
    <%- if @development -%>
    enabled: false
    <%- else -%>
    enabled: true
    <%- end -%>

# replicaset options
replication:
  <%- if @oplog_size -%>
  oplogSizeMB: <%= @oplog_size %>
  <%- end -%>
  replSetName: <%= @replicaset_name %>
