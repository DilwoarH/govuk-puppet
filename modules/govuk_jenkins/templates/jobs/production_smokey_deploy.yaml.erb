---
- scm:
    name: smokey_Production_Smokey_Deploy
    scm:
        - git:
            url: git@github.com:alphagov/smokey.git
            branches:
              - release

- job:
    name: Production_Smokey_Deploy
    display-name: Production_Smokey_Deploy
    project-type: freestyle
    properties:
        - github:
            url: https://github.com/alphagov/smokey/
    scm:
      - smokey_Production_Smokey_Deploy
    builders:
        - shell: |
            export GOVUK_PROVIDER=sky
            export DEPLOY_TO=monitoring-1.management.production
            sh -x deploy.sh
    triggers:
        - timed: 'H 9 * * *'
