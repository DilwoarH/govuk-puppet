---
- scm:
    name: env-sync-and-backup_Copy_Whitehall_data_to_integration
    scm:
        - git:
            url: git@github.gds:gds/env-sync-and-backup.git
            branches:
              - master

- job:
    name: Copy_Whitehall_data_to_integration
    display-name: Copy_Whitehall_data_to_integration
    project-type: freestyle
    description: |
        This job sanitises the whitehall database and synchronises it to the integration
        environment periodically to keep it up to date.
    properties:
        - github:
            url: https://github.gds/gds/env-sync-and-backup/
    scm:
      - env-sync-and-backup_Copy_Whitehall_data_to_integration
    logrotate:
        artifactNumToKeep: 10
    triggers:
        - timed: '15 5 * * 1-5'
    builders:
        - shell: |
            cd "$WORKSPACE/whitehall/"
            echo "Sanitising and syncing whitehall database"
            ./sanitise-db.sh "<%= @whitehall_mysql_password %>" "jumpbox.integration.publishing.service.gov.uk"
    wrappers:
        - ansicolor:
            colormap: xterm
