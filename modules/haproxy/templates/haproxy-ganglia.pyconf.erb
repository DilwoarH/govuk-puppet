modules {
    module {
        name = "haproxy"
        language = "python"
        param socket_timeout {
        	value = 15
        }
        param stats_socket {
            value = '/var/run/haproxy.sock'
        }
        param services {
            value = '<%= @lb_name %>_FRONTEND'
        }
        param groups {
            value = 'haproxy'
        }
    }
}
collection_group {
    collect_every = 60
    time_threshold = 180
    metric {
        name = "<%= @lb_name %>_FRONTEND_scur"
        title = "<%= @lb_name %> frontend Current Sessions"
        value_threshold = 10
    }
    metric {
        name = "<%= @lb_name %>_FRONTEND_rate"
        title = "<%= @lb_name %> frontend Current Session Rate"
        value_threshold = 10
    }
    metric {
        name = "<%= @lb_name %>_FRONTEND_rate_max"
        title = "<%= @lb_name %> frontend Max Session Rate"
        value_threshold = 10
    }
}
