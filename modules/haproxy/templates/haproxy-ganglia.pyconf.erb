modules {
    module {
        name = "haproxy"
        language = "python"
        param socket_timeout {
        	value = 15
        }
        param stats_socket {
            value = '/var/run/haproxy.sock'
        }
        param services {
            value = '<%= @lb_name %>'
        }
        param groups {
            value = 'haproxy'
        }
    }
}
collection_group {
    collect_every = 60
    time_threshold = 180
    metric {
        name = "<%= @lb_name %>_scur"
        title = "HTTP F Current Sessions"
        value_threshold = 10
    }
    metric {
        name = "<%= @lb_name %>_rate"
        title = "HTTP F Current Session Rate"
        value_threshold = 10
    }
    metric {
        name = "<%= @lb_name %>_rate_max"
        title = "HTTP F Max Session Rate"
        value_threshold = 10
    }
    metric {
        name = "<%= @lb_name %>_hrsp_1xx"
        title = "HTTP F Rsps 1xx"
        value_threshold = 100
    }
    metric {
        name = "<%= @lb_name %>_hrsp_2xx"
        title = "HTTP F Rsps 2xx"
        value_threshold = 1000
    }
    metric {
        name = "<%= @lb_name %>_hrsp_3xx"
        title = "HTTP F Rsps 3xx"
        value_threshold = 1000
    }
    metric {
        name = "<%= @lb_name %>_hrsp_4xx"
        title = "HTTP F Rsps 4xx"
        value_threshold = 1000
    }
    metric {
        name = "<%= @lb_name %>_hrsp_5xx"
        title = "HTTP F Rsps 5xx"
        value_threshold = 10
    }
    metric {
        name = "<%= @lb_name %>_hrsp_other"
        title = "HTTP F Rsps other"
        value_threshold = 10
    }
}
