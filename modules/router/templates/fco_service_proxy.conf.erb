# This file is managed by Puppet. Local changes will be clobbered.
server {
  server_name <%= @vhost_name %>;
  listen 80;
  rewrite ^/(.*) https://$server_name/$1 permanent;
}

server {
  server_name <%= @vhost_name %>;

  listen              443 ssl;
  ssl_certificate     /etc/nginx/ssl/<%= @vhost_name -%>.crt;
  ssl_certificate_key /etc/nginx/ssl/<%= @vhost_name -%>.key;
  include             /etc/nginx/ssl.conf;

  proxy_set_header X-Real-IP $remote_addr;
  proxy_set_header X-Forwarded-Server $host;
  proxy_set_header X-Forwarded-Host $http_host;
  proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

  access_log /var/log/nginx/<%= @vhost_name -%>-json.event.access.log json_event;
  error_log /var/log/nginx/<%= @vhost_name -%>-error.log;

  location / {
    <%- if @enable_auth -%>
      deny all;
      auth_basic            "Enter the GOV.UK username/password (not your personal username/password)";
      auth_basic_user_file  /etc/govuk.htpasswd;
      satisfy any;
    <%- end -%>

    proxy_pass https://fco-services.<%= @app_domain -%>;
  }

  <%- if @enable_auth -%>
    <%# Don't require auth for the assets because Barclays needs access to the epdq template. %>
    location /assets/ {
      proxy_pass https://fco-services.<%= @app_domain -%>;
    }
  <%- end -%>
}
