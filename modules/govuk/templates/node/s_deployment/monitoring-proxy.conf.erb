server {
  listen 80;
  server_name logging.*;

  location / {
    proxy_pass http://logging.management.production/;
    proxy_set_header Host $http_host;
  }
}

server {
  listen 80;
  server_name monitoring.*;

  location / {
    proxy_pass http://monitoring.management.production/;
    proxy_set_header Host $http_host;
  }
}

server {
  listen 443;
  server_name monitoring.* nagios.*;

  location / {
    proxy_pass https://monitoring.management.production/;
    proxy_set_header Host $http_host;
  }
}

server {
  listen 443;
  server_name graphite.*;

  location / {
    proxy_pass http://graphite.cluster/;
    proxy_set_header Host $http_host;
  }
}
