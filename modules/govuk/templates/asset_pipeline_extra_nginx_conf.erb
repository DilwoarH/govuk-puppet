
  # Set expires headers for assets
  # Assets with a digest (32 char hex string in filename) get max expires
  # Non-digest assets get 30 mins
  location ^~ /<%= @asset_pipeline_prefix %>/ {
    expires 30m;
    add_header Cache-Control public;
    gzip_static on;

    location ~ "-[0-9a-f]{32}\." {
      expires max;
    }
  }

