#!/bin/bash
set -e

NAGIOS_CODE=$1
NAGIOS_MESSAGE=$2

if [ -n "$NAGIOS_CODE" ] && [ -n "$NAGIOS_MESSAGE" ]; then
  printf "<%= @ipaddress %>\t<%= @service_desc %>\t$NAGIOS_CODE\t$NAGIOS_MESSAGE\n" | /usr/sbin/send_nsca -H alert.cluster >/dev/null
else
  echo "Didn't sumbmit nagios check as there were insufficient parameters"
  echo "NAGIOS_CODE=$NAGIOS_CODE"
  echo "NAGIOS_MESSAGE=$NAGIOS_MESSAGE"
  exit 1
fi
