description "GOV.UK application: <%= name %>"

start on runlevel [2345]
stop on runlevel [!2345]

respawn

# If the app respawns more than 5 times in 20 seconds, it has deeper problems
# and should be killed off.
respawn limit 5 20

env PORT=<%= port %>

script
  exec govuk_spinup "<%= name %>" "<%= app_type %>" \
    >>/var/log/<%= title %>/<%= title %>.log \
    2>>/var/log/<%= title %>/<%= title %>.error.log
end script
