description "Whitehall Admin Delayed job background worker"

<%- if govuk_platform != 'development' -%>
start on runlevel [2345]
<%- end -%>
stop on runlevel [!2345]

respawn

# If the app respawns more than 5 times in 20 seconds, it has deeper problems
# and should be killed off.
respawn limit 5 20

exec govuk_setenv whitehall-admin govuk_run_delayed_job_worker
