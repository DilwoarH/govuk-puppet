input {
  file {
    type => "<%=title%>-unicorn-out"
    path => "/var/log/<%=title%>/<%=title%>.log"
  }
  file {
    type => "<%=title%>-unicorn-err"
    path => "/var/log/<%=title%>/<%=title%>.error.log"
  }
  file {
    type => "<%=title%>-app"
    path => "/var/apps/<%=title%>/log/*.log"
  }
}
