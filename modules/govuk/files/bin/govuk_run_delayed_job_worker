#!/bin/sh
if [ -z "$GOVUK_APP_ROOT" ]; then
  echo "Usage: govuk_setenv <APP_NAME> $(basename "$0")"
fi

start-stop-daemon --start \
          --chuid "$GOVUK_USER:$GOVUK_GROUP" \
          --chdir "$GOVUK_APP_ROOT" \
          --pidfile "${GOVUK_APP_RUN}/delayed_job.pid" \
          --make-pidfile \
          --startas "/bin/sh" \
          -- -c "exec bundle exec rake --trace jobs:work 2>>'${GOVUK_APP_LOGROOT}/delayed_job.err.log' 1>>'${GOVUK_APP_LOGROOT}/delayed_job.out.log'"
