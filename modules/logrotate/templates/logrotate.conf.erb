<%= @matches %> {
  <%- if @user && @group -%>
  su <%= @user -%> <%= @group %>
  <%- end -%>
  daily
  missingok
  rotate <%= @days_to_keep %>
  compress
  notifempty
  copytruncate
  <%- if @prerotate -%>
  prerotate
    <%= @prerotate %>
  endscript
  <%- end -%>
  <%- if @postrotate -%>
  postrotate
    <%= @postrotate %>
  endscript
  <%- end -%>
}
