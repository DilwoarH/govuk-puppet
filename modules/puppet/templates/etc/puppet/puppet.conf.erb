[main]
preferred_serialization_format = yaml
pluginsync = true
<% if govuk_platform == 'development' %>
modulepath = /var/govuk/puppet/modules
manifestdir = /var/govuk/puppet/manifests
<% else %>
[agent]
report=true
configtimeout=600
vardir=/var/lib/puppet { mode = 644 }

[master]
reports = store
storeconfigs = true
modulepath = /usr/share/puppet/production/current/modules
manifestdir = /usr/share/puppet/production/current/manifests

storeconfigs_backend = puppetdb
<% end %>
