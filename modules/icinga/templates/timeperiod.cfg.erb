define timeperiod{
        timeperiod_name <%= @timeperiod_name %>
        alias           <%= @timeperiod_alias %>
<%= @mon && "        monday          #{@mon}" %>
<%= @tue && "        tuesday         #{@tue}" %>
<%= @wed && "        wednesday       #{@wed}" %>
<%= @thu && "        thursday        #{@thu}" %>
<%= @fri && "        friday          #{@fri}" %>
<%= @sat && "        saturday        #{@sat}" %>
<%= @sun && "        sunday          #{@sun}" %>
        }
