# Preview SSH config

Host jumpbox.preview.alphagov.co.uk
  ProxyCommand none

Host jumpbox-1.management.preview
  Hostname jumpbox.preview.alphagov.co.uk
  ProxyCommand none

Host jumpbox-2.management.preview
  Hostname jumpbox.preview.alphagov.co.uk
  Port     1022
  ProxyCommand none

Host *.preview
  ProxyCommand ssh -e none %r@jumpbox.preview.alphagov.co.uk exec nc $(echo %h | sed 's/\.preview$/\.production/') %p
